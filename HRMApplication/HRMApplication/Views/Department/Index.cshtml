@model IEnumerable<HRMApplication.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="/Department/Create" class="btn btn-success">Crate Department</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <a href="/Department/Edit/@item.ID" class="btn btn-primary">Update</a>
        <a href="/Department/Details/@item.ID" class="btn btn-warning">Details</a>
        <a href="/Department/Delete/@item.ID" class="btn btn-danger">Delete</a>
   
    </td>
</tr>
}

</table>
