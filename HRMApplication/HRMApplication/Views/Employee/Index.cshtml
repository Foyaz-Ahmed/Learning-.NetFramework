@model IEnumerable<HRMApplication.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="/Employee/Create" class="btn btn-success">Crate Employee</a>
</p>
<table class="table table-bordered;" style="margin-left:0; text-align:center;">
    <tr>
        <th style=" color:red;">
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.sortOrder == null ? "Asc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Name" })
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th style=" color:red;">
            @Html.ActionLink("Age", "Index", new { sortOrder = ViewBag.sortOrder == null ? "Asc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Age" })
        </th>
        <th style=" color:red;">
            @Html.ActionLink("Salary", "Index", new { sortOrder = ViewBag.sortOrder == null ? "Asc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Salary" })
        </th>
        <th style=" color:red;">
            @Html.ActionLink("JoiningDate", "Index", new { sortOrder = ViewBag.sortOrder == null ? "Asc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "JoiningDate" })
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Dept_ID)
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Comp_ID)
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Desig_ID)
        </th>
        <th style=" color:red;">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style=" color:red;">
            Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Salary)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JoiningDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DOB)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dept_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comp_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Desig_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        <a href="/Employee/Edit/@item.ID" class="btn btn-primary">Update</a>
        <a href="/Employee/Details/@item.ID" class="btn btn-warning">Details</a>
        <a href="/Employee/Delete/@item.ID" class="btn btn-danger">Delete</a>
    </td>
 
</tr>
}

</table>
